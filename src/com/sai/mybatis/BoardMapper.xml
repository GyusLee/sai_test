<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">
	<sql id="select">
		select * from board
	</sql>
	
	<!-- 게시물 조회 -->
	<select id="selectAll">
		<include refid="select"/>
		order by board_id asc
	</select>
	
</mapper>