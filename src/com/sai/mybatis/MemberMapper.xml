<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">
	<sql id="select">
		select * from member
	</sql>
	<select id="selectAll" resultType="Member">
		<include refid="select" />
		order by member desc
	</select>
	<select id="selectOne" resultType="Member" parameterType="int">
		<include refid="select" />
		where member_id=#{member_id}
	</select>
	<insert id="insert" parameterType="Member">
		insert into
		member(member_email, member_pwd, member_name, member_nickname,
		couple_id)
		values(#{member_email},#{member_pwd},#{member_name},#{member_nickname},#{couple_id})
	</insert>
	<delete id="delete" parameterType="int">
		delete from member where
		member_id=#{member_id}
	</delete>


	<insert id="insert_first" parameterType="Member">
		insert into
		member(m_email,m_name,m_gender)
		values(#{m_email},#{m_name},#{m_gender})
	</insert>
	<update id="update_regist" parameterType="Member">
		update member set p_email=#{p_email} where m_email=#{m_email}
	</update>
	<update id="update" parameterType="Member">
		update member set
		couple_id=#{couple_id} where m_email=#{m_email}
	</update>
	<select id="select" parameterType="Member" resultType="Member">
		select *
		from member where m_email=#{m_email}
	</select>
</mapper>